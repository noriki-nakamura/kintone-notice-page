---
const calendarUrl = import.meta.env.GOOGLE_CALENDAR_EMBED_URL;
---

{calendarUrl && (
  <div class="calendar-container">
    <h2>イベントカレンダー</h2>
    <div class="iframe-wrapper">
      <iframe src={calendarUrl} style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
    </div>
  </div>
)}

<style>
  .calendar-container {
    /* Layout handled by parent */
  }
  .iframe-wrapper {
    position: relative;
    padding-bottom: 75%; /* Aspect ratio for responsive iframe */
    height: 0;
    overflow: hidden;
  }
  .iframe-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
